@namespace BsBlazor
@inherits BsParentComponentBase
<div class="@CssClass" style="@Style" @attributes="AdditionalAttributes">
    @ChildContent
</div>
@code {
    private string CssClass => CssBuilder.Empty()
      .AddClass(Bs.Css.FormFloating, Floating)
      .AddClass(Class)
      .Build();

    [Parameter]
    public bool Floating { get; set; }
}
